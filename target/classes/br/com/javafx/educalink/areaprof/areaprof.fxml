<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.javafx.educalink.areaprof.AreaProfController">

    <!-- Topo -->
    <HBox alignment="CENTER_LEFT" prefHeight="68.0" prefWidth="1280.0" spacing="20" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-width: 0 0 1 0;" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <ImageView fitHeight="46.0" fitWidth="162.0" preserveRatio="true">
            <image>
                <Image url="@../img/areaprof/Logoeduca.png" />
            </image>
        </ImageView>

        <Region HBox.hgrow="ALWAYS" />

        <Label prefHeight="37.0" prefWidth="260.0" style="-fx-font-size: 23px; -fx-font-weight: bold;" text="PAINEL DO PROFESSOR" />

        <Region prefHeight="59.0" prefWidth="6.0" HBox.hgrow="ALWAYS" />

        <Button fx:id="sair" onAction="#clicouSair" prefHeight="39.0" prefWidth="100.0" style="-fx-background-color: #820AD1; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 18;" text="SAIR" />
      <padding>
         <Insets left="15.0" right="15.0" />
      </padding>
    </HBox>

    <!-- Área central com os cards -->
    <VBox alignment="CENTER" spacing="40" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="60">

        <HBox alignment="CENTER" prefHeight="212.0" prefWidth="1280.0" spacing="40">

            <!-- Card 1 -->
            <VBox fx:id="cardAlunos" alignment="CENTER" onMouseClicked="#abrirTelaAlunos" prefHeight="150.0" prefWidth="250.0" spacing="10" style="-fx-background-color: #f9f9f9; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 2, 2);">
                <ImageView fitHeight="80.0" fitWidth="80.0">
                    <image>
                        <Image url="@../img/areaprof/users.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Meus Alunos" />
                <Label fx:id="lblTotalAlunos" alignment="CENTER" text="0">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </VBox>

            <!-- Card 2 -->
            <VBox fx:id="cardPendentes" alignment="CENTER" onMouseClicked="#abrirTelaPendentes" prefHeight="150.0" prefWidth="250.0" spacing="10" style="-fx-background-color: #f9f9f9; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 2, 2);">
                <ImageView fitHeight="80.0" fitWidth="80.0">
                    <image>
                        <Image url="@../img/areaprof/Document.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Atividades Pendentes" />
            </VBox>

            <!-- Card 3 -->
            <VBox fx:id="cardLancar" alignment="CENTER" onMouseClicked="#abrirTelaLancar" prefHeight="143.0" prefWidth="250.0" spacing="10" style="-fx-background-color: #f9f9f9; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 2, 2);">
                <ImageView fitHeight="90.0" fitWidth="90.0">
                    <image>
                        <Image url="@../img/areaprof/lancarmaterial.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Lançar" />
                <Label alignment="CENTER" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Material/Atividade" wrapText="true" />
            </VBox>

        </HBox>
    </VBox>
</AnchorPane>
