<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.javafx.educalink.areaalu.CorrecaoController">

    <children>
        <!-- Cabeçalho -->
        <HBox alignment="CENTER_LEFT" prefHeight="68.0" spacing="20" style="-fx-background-color: white; -fx-border-color: #C3C3C3; -fx-border-width: 0 0 2 0;" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <padding>
                <Insets left="15.0" right="15.0" />
            </padding>
            <children>
                <ImageView fitHeight="46.0" fitWidth="162.0" preserveRatio="true">
                    <image>
                        <Image url="@../img/areaalu/Logoeduca.png" />
                    </image>
                </ImageView>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="voltar" onAction="#clicouVoltar" prefHeight="39.0" style="-fx-background-color: #820AD1; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 18; -fx-pref-width: 100px;" text="VOLTAR" />
            </children>
        </HBox>

        <!-- Conteúdo -->
        <VBox layoutY="107.0" prefHeight="593.0" prefWidth="1240.0" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="107.0">
            <!-- Título -->
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Correção da Atividade" />

            <!-- Matéria e Assunto -->
            <HBox spacing="50">
                <VBox spacing="10">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Matéria:" />
                    <Label fx:id="lblMateria" style="-fx-background-color: #F5F5F5; -fx-padding: 6 12; -fx-background-radius: 20; -fx-font-size: 15px;" text="WebDesign" />
                </VBox>

                <VBox spacing="10">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Assunto:" />
                    <Label fx:id="lblAssunto" style="-fx-background-color: #F5F5F5; -fx-padding: 6 12; -fx-background-radius: 20; -fx-font-size: 15px;" text="Criar um site utilizando HTML, CSS e JS" />
                </VBox>
            </HBox>

            <!-- Material analisado -->
            <VBox spacing="10">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Material Analisado" />

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ImageView fx:id="iconArquivo" fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../img/ativmate/filelogo.png" />
                        </image>
                    </ImageView>

                    <Hyperlink fx:id="linkArquivo" style="-fx-font-size: 14px;" text="Abrir arquivo" />
                </HBox>
            </VBox>

            <!-- Comentário/correção -->
            <VBox spacing="10">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Sobre a correção" />
                <TextArea fx:id="txtCorrecao" editable="false" style="-fx-background-color: #F9F9F9; -fx-padding: 15; -fx-font-size: 15px; -fx-background-radius: 20;" text="Aqui aparecerá o feedback do professor com pontos positivos e melhorias." wrapText="true" VBox.vgrow="ALWAYS" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>
