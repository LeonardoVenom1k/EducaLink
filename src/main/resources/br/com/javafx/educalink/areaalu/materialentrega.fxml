<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.javafx.educalink.areaalu.MaterialEntregaController">
   <children>
   
       <!-- Topo -->
       <HBox alignment="CENTER_LEFT" prefHeight="68.0" spacing="20" style="-fx-background-color: white; -fx-border-color: #C3C3C3; -fx-border-width: 0 0 2 0;" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
           <padding>
               <Insets left="15.0" right="15.0" />
           </padding>
           <children>
               <ImageView fitHeight="46.0" fitWidth="162.0" preserveRatio="true">
                   <image>
                       <Image url="@../img/areaalu/Logoeduca.png" />
                   </image>
               </ImageView>
   
               <Region HBox.hgrow="ALWAYS" />
   
               <Button fx:id="voltar" onAction="#clicouVoltar" prefHeight="39.0" style="-fx-background-color: #820AD1; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 18; -fx-pref-width: 100px;" text="VOLTAR" />
           </children>
       </HBox>
   
       <!-- Conteúdo principal -->
       <VBox spacing="25" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="90">
      <children>
              <!-- Título -->
              <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="MATERIAL/ATIVIDADE" />
      
              <!-- Linha disciplina / assunto / material -->
              <HBox spacing="40">
         <children>
                     <VBox prefHeight="124.0" prefWidth="137.0" spacing="15.0">
                        <children>
                            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Disciplina:" />
                            <Label fx:id="disciplinaLabel" style="-fx-font-size: 14px;" text="---" />
            
                            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Assunto:" />
                            <Label fx:id="assuntoLabel" style="-fx-font-size: 14px;" text="---" />
                        </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     </VBox>
                  <Region prefHeight="110.0" prefWidth="710.0" />
         
                     <VBox prefHeight="139.0" prefWidth="273.0" spacing="15.0">
            <children>
                            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Material de apoio:" />
                            <Hyperlink fx:id="materialLink" style="-fx-font-size: 14px;" text="Baixar Arquivo" visible="false">
                                <graphic>
                                    <ImageView fitHeight="35.0" fitWidth="35.0" preserveRatio="true">
                                        <image>
                                            <Image url="@../ativmate/filelogo.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Hyperlink>
            </children>
                     </VBox>
         </children>
              </HBox>
      
              <!-- Pane da Atividade (mostrado só se for Atividade) -->
              <VBox fx:id="atividadePane" managed="false" spacing="15" visible="false">
         <children>
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Comentar/Anexar Arquivo" />
                     <TextArea fx:id="atividadeArea" prefHeight="264.0" prefWidth="1200.0">
                     <font>
                        <Font size="14.0" />
                     </font></TextArea>
                     <HBox prefHeight="39.0" prefWidth="1211.0" spacing="15">
                        <children>
                            <Button fx:id="anexarBtn" style="-fx-background-color: #820AD1; -fx-text-fill: white; -fx-background-radius: 20;" text="Anexar arquivos">
                           <font>
                              <Font size="18.0" />
                           </font></Button>
                            <Button fx:id="enviarBtn" style="-fx-background-color: #820AD1; -fx-text-fill: white; -fx-background-radius: 20;" text="Enviar">
                           <font>
                              <Font size="18.0" />
                           </font></Button>
                        </children>
                     </HBox>
         </children>
              </VBox>
      </children>
       </VBox>
   </children>

</AnchorPane>
