<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Spinner?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.javafx.educalink.areaprof.LancarMaterialController">

   <children>
      <!-- TOPO -->
      <HBox alignment="CENTER_LEFT" prefHeight="68.0" spacing="20"
            style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-width: 0 0 1 0;"
            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
         <padding>
            <Insets left="15.0" right="15.0" />
         </padding>
         <children>
            <ImageView fitHeight="46.0" fitWidth="162.0" preserveRatio="true">
               <image>
                  <Image url="@../img/areaprof/Logoeduca.png" />
               </image>
            </ImageView>
            <Region HBox.hgrow="ALWAYS" />
            <Label style="-fx-font-size: 23px; -fx-font-weight: bold;" text="PAINEL DO PROFESSOR" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="sair" onAction="#clicouSair" prefHeight="39.0" prefWidth="100.0"
                    style="-fx-background-color: #820AD1; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 18;"
                    text="VOLTAR" />
         </children>
      </HBox>

      <!-- CONTEÚDO -->
      <VBox spacing="20" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0"
            AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="90.0">
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="CADASTRO DE ATIVIDADE OU MATERIAL" />

            <!-- Linha Tipo -->
            <HBox alignment="CENTER_LEFT" spacing="10">
               <children>
                  <Label style="-fx-font-size:14;" text="Material ou Atividade" />
                  <ComboBox fx:id="tipoCombo" prefWidth="200.0">
                     <items>
                        <FXCollections fx:factory="observableArrayList">
                           <String fx:value="Material" />
                           <String fx:value="Atividade" />
                        </FXCollections>
                     </items>
                  </ComboBox>
               </children>
            </HBox>

            <!-- Linha Matéria -->
            <HBox alignment="CENTER_LEFT" spacing="10">
               <children>
                  <Label style="-fx-font-size:14;" text="Matéria:" />
                  <ComboBox fx:id="materiaCombo" prefWidth="200.0" />
               </children>
            </HBox>

            <!-- Linha Assunto -->
            <HBox alignment="CENTER_LEFT" spacing="10">
               <children>
                  <Label style="-fx-font-size:14;" text="Assunto:" />
                  <TextField fx:id="assuntoField" maxWidth="500.0" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>

            <!-- Linha Prazo (só aparece se for Atividade) -->
            <HBox fx:id="prazoBox" alignment="CENTER_LEFT" spacing="10" visible="false" managed="false">
               <children>
                  <Label style="-fx-font-size:14;" text="Prazo de entrega:" />
                  <DatePicker fx:id="prazoData" />
                  <Label text="Hora:" style="-fx-font-size:14;" />
                  <Spinner fx:id="horaSpinner" prefWidth="70.0" />
                  <Label text="Min:" style="-fx-font-size:14;" />
                  <Spinner fx:id="minutoSpinner" prefWidth="70.0" />
               </children>
            </HBox>

            <!-- Área de anexos -->
            <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Anexar material de apoio" />
            <TextArea fx:id="anexosArea" editable="false" maxHeight="264.0" prefHeight="1200.0"
                      promptText="Arquivos anexados aparecerão aqui..." VBox.vgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>

            <!-- Botões -->
            <HBox spacing="15">
               <children>
                  <Button fx:id="anexarBtn" onAction="#clicouAnexar"
                          style="-fx-background-color: #820AD1; -fx-text-fill: white; -fx-background-radius: 20;"
                          text="Anexar arquivos">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="cadastrarBtn" onAction="#clicouCadastrar"
                          style="-fx-background-color: #820AD1; -fx-text-fill: white; -fx-background-radius: 20;"
                          text="Enviar">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
